{
  "name": "talkchannel-relay-server",
  "version": "0.1.0",
  "description": "카카오톡 채널 webhook relay server for OpenClaw",
  "module": "src/index.ts",
  "type": "module",
  "private": true,
  "scripts": {
    "dev": "bun run --hot src/index.ts",
    "dev:admin": "bun build admin/src/main.tsx --outdir=public/admin --watch",
    "start": "bun run src/index.ts",
    "build": "bun build src/index.ts --outdir=dist --target=bun",
    "build:admin:js": "bun build admin/src/main.tsx --outdir=public/admin --minify",
    "build:admin:css": "bunx @tailwindcss/cli -i admin/src/index.css -o public/admin/main.css --minify",
    "build:admin": "bun run build:admin:js && bun run build:admin:css",
    "build:portal:js": "bun build portal/src/main.tsx --outdir=public/portal --minify",
    "build:portal:css": "bunx @tailwindcss/cli -i portal/src/index.css -o public/portal/main.css --minify",
    "build:portal": "bun run build:portal:js && bun run build:portal:css",
    "build:all": "bun run build:admin && bun run build:portal && bun run build",
    "check": "bunx biome check src/",
    "format": "bunx biome format --write src/",
    "lint": "bunx biome lint src/",
    "db:generate": "bunx drizzle-kit generate",
    "db:migrate": "bunx drizzle-kit migrate",
    "db:push": "bunx drizzle-kit push",
    "db:studio": "bunx drizzle-kit studio",
    "test": "bun test",
    "test:portal": "bun test portal/",
    "test:admin": "bun test admin/"
  },
  "engines": {
    "bun": ">=1.3.8"
  },
  "devDependencies": {
    "@biomejs/biome": "^2.3.13",
    "@types/bun": "latest",
    "@types/react": "^19.1.6",
    "@types/react-dom": "^19.1.6",
    "drizzle-kit": "^0.31.8",
    "tailwindcss": "^4.1.8"
  },
  "peerDependencies": {
    "typescript": "^5"
  },
  "dependencies": {
    "@hono/zod-validator": "^0.7.6",
    "class-variance-authority": "^0.7.1",
    "clsx": "^2.1.1",
    "drizzle-orm": "^0.45.1",
    "hono": "^4.11.7",
    "lucide-react": "^0.513.0",
    "react": "^19.1.0",
    "react-dom": "^19.1.0",
    "react-router-dom": "^7.6.1",
    "tailwind-merge": "^3.3.0",
    "zod": "^4.3.6"
  }
}
